# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /sayHello/:name                   controllers.Application.sayHello(name:String)
GET         /reverser/                        controllers.Application.reverser
GET         /                                 controllers.PacienteController.listarPacientes
### API REST
# Paciente
POST        /pacientes/                       controllers.PacienteController.create
GET         /pacientes/                       controllers.PacienteController.listarPacientes
GET         /pacientes/:id                    controllers.PacienteController.getByID(id:Long)

# Medico
POST        /medicos/                         controllers.UsuarioController.createMedico
GET         /medicos/                         controllers.UsuarioController.listarMedicos
GET         /medicos/:id                      controllers.UsuarioController.getMedicoByID(id:Long)

# Administrador
POST        /administradores/                 controllers.UsuarioController.createAdmin
GET         /administradores/                 controllers.UsuarioController.listarAdministradores
GET         /administradores/:id              controllers.UsuarioController.getAdminByID(id:Long)

# Recepcion
POST        /recepciones/                     controllers.RecepcionController.create
GET         /recepciones/                     controllers.RecepcionController.listarRecepciones
GET         /recepciones/:id/pacientes        controllers.RecepcionController.getByMedico(id:Long)
GET         /recepciones/:id/turnos           controllers.RecepcionController.getByPaciente(id:Long)
GET         /recepciones/:id                  controllers.RecepcionController.getByID(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                     controllers.Assets.versioned(path="/public", file: Asset)
